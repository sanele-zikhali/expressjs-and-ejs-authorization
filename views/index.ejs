<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Home Page</title>
    <link rel="stylesheet" href="/style.min.css ">
</head>
<body>
    <%- include('includes/header') %>
    <main>
        <form action="/register" method="POST">
            <fieldset>
                <legend><b>Create account</b></legend>
                <small><b>Please provide your details to sign up.</b></small>

                <% errors.forEach(error => { %>
                    <p class="notice"><%= error %></p>
                <%})%>

                <label class="mt-2" for="username"><small>Username</small></label>
                <input type="text" id="username" name="username" autocomplete="off">
                <label for="password"><small>Password</small></label>
                <input type="password" id="password" name="password" autocomplete="off">
                <br>
                <button>Register</button>
                <div>
                    <small class="mt-2">Already have an account <a href="/login">login</a></small>
                </div>
            </fieldset>
        </form>
    </main>
    <%- include('includes/footer') %>
</body>
</html>